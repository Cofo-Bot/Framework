{
  "compilerOptions": {
    "target": "es6",                                    
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                
    "resolveJsonModule": true,                        
    "allowJs": true,                                 
    "declaration": true,                             
    "outDir": "./dist",                                
    "removeComments": true,                         
    "inlineSourceMap": true,                        
    "declarationDir": "./types",         
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true                               
  }
}
